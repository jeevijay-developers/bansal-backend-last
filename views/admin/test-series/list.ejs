<%- include('../layouts/header') %>

<section class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex align-items-center justify-content-between">
            <h4 class="card-title mb-0"><%= page_name %></h4>

            <div class="row">
              <div class="col-12 text-end">
                <% if (req.query.status === 'trashed') { %>
                  <a class="btn btn-primary" href="<%= list_url %>">
                    <i class="fas fa-list"></i>
                  </a>
                <% } else { %>
                  <a class="btn btn-danger btn-sm" href="<%= trashed_list_url %>">
                    <i class="fas fa-trash"></i>
                  </a>
                <% } %>

                <a class="btn btn-info btn-sm" href="<%= create_url %>">
                  <i class="fas fa-plus"></i>
                </a>
                <button type="button" id="backButton" class="btn btn-primary btn-sm">
                  <i class="fa fa-arrow-left"></i>
                </button>
              </div>
            </div>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <div class="d-flex align-items-center mb-2 justify-content-between">
  <% if (req.query.status !== 'trashed') { %>
         <button id="bulkDeleteBtn" class="btn btn-danger btn-sm mb-2" disabled>
  <i class="fa fa-trash"></i> Delete Selected
</button>
<% } %>

<% if (req.query.status === 'trashed') { %>
  <button id="bulkRestoreBtn" class="btn btn-success btn-sm mb-2" disabled>
    <i class="fa fa-undo"></i> Restore Selected
  </button>
<% } %>
 <% if (permissions.includes('Book Export')) { %>

  <a href="#" id="exportBtn" class="btn btn-success btn-sm">
    <i class="fas fa-file-export"></i> Export Test Series
  </a>
 <% } %>
</div>
<hr>
              <table id="example3" class="display table-responsive-lg">
                <thead>
                  <tr>
                     <th><input type="checkbox" id="selectAll" /></th> <!-- Bulk select all -->
                    <th>Sr.No #</th>
                    <th>Category Name</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Sort Order</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% customers.forEach((course, index) => { %>
                    <tr>
                      <td>
                         <input type="checkbox" class="bulk-checkbox" value="<%= course.id %>" />
                         </td>
                      <td><%= index + 1 %></td>
                      <td><%= course.category_name %></td>
                      <td><%= course.name %></td>
                      <td>&#8377; <%= course.offer_price %></td>
                       <td><%= course.sort_order %></td>
                      <td>
                        <% if (course.status == 1) { %>
                          <label class="badge badge-success">Active</label>
                        <% } else { %>
                          <label class="badge badge-danger">Inactive</label>
                        <% } %>
                      </td>
                      <td>
                        <a
                          href="<%= actions_url %>-show/<%= course.id %>"
                          class="btn btn-primary shadow btn-xs sharp me-1"
                        >
                          <i class="fas fa-eye"></i>
                        </a>

                        <% if (status !== 'trashed') { %>
                          <a
                            href="<%= actions_url %>-edit/<%= course.id %>"
                            class="btn btn-primary shadow btn-xs sharp me-1"
                          >
                            <i class="fas fa-pencil-alt"></i>
                          </a>

                          <a
                            href="<%= actions_url %>-delete/<%= course.id %>"
                            class="btn btn-danger shadow btn-xs sharp"
                            onclick="return confirm('Are you sure you want to delete this item?');"
                          >
                            <i class="fa fa-trash"></i>
                          </a>
                        <% } %>

                        <% if (status === 'trashed') { %>
                          <a
                            href="<%= actions_url %>-restore/<%= course.id %>"
                            class="btn btn-warning shadow btn-xs sharp"
                            onclick="return confirm('Are you sure you want to restore this item?');"
                          >
                            <i class="fa fa-undo"></i>
                          </a>

                          <a
                            href="<%= actions_url %>-permanent-delete/<%= course.id %>"
                            class="btn btn-danger shadow btn-xs sharp"
                            onclick="return confirm('Are you sure you want to permanently delete this item?');"
                          >
                            <i class="fa fa-trash"></i>
                          </a>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>



 <script>
  const bulkDeleteBtn = document.getElementById("bulkDeleteBtn");
  const checkboxes = document.querySelectorAll(".bulk-checkbox");
  const selectAll = document.getElementById("selectAll");

  function updateBulkDeleteButton() {
    const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
    bulkDeleteBtn.disabled = !anyChecked;
  }

  // On individual checkbox change
  checkboxes.forEach(cb => cb.addEventListener("change", updateBulkDeleteButton));

  // On select/deselect all
  selectAll.addEventListener("change", function() {
    checkboxes.forEach(cb => cb.checked = this.checked);
    updateBulkDeleteButton();
  });

  // Bulk Delete click
  bulkDeleteBtn.addEventListener("click", async function() {
    const selectedIds = Array.from(checkboxes)
                             .filter(cb => cb.checked)
                             .map(cb => cb.value);

    if (selectedIds.length === 0) return; // safety

    if (!confirm("Are you sure you want to delete selected Test Series?")) return;

    try {
      const response = await fetch("/admin/test-series/bulk-delete", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ ids: selectedIds })
      });

      const result = await response.json();
      alert(result.message);

      if (result.success) location.reload();
    } catch (err) {
      alert("Error deleting Test Series: " + err.message);
    }
  });
</script>


