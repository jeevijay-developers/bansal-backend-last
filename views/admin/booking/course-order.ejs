<%- include('../layouts/header') %>

<section class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex align-items-center justify-content-between">
            <h4 class="card-title mb-0"><%= page_name %></h4>
            <div class="row">
              <div class="col-12 text-end">
               
                
                <button type="button" id="backButton" class="btn btn-primary btn-sm">
                  <i class="fa fa-arrow-left"></i>
                </button>
              </div>
            </div>
          </div>

          <div class="card-body">
           <div class="row align-items-end g-2 mb-3 filter-tab">
  <div class="col-md-2">
    <label>From</label>
    <input type="date" id="from_date" class="form-control" value="<%= req.query.from_date || '' %>">
  </div>
  <div class="col-md-2">
    <label>To</label>
    <input type="date" id="to_date" class="form-control" value="<%= req.query.to_date || '' %>">
  </div>
  <div class="col-md-2">
    <label>Payment Status</label>
    <select id="payment_status" class="form-control">
      <option value="">All</option>
      <option value="paid" <%= req.query.payment_status === 'completed' ? 'selected' : '' %> >Paid</option>
      <option value="unpaid" <%= req.query.payment_status === 'pending' ? 'selected' : '' %>>Unpaid</option>
    </select>
  </div>
  <div class="col-md-2">
    <label>Course Name</label>
    <select id="course" class="form-control">
      <option value="">All</option>
      <% courses.forEach(course => { %>
        <option value="<%= course.id %>" <%= req.query.course == course.id ? 'selected' : '' %>><%= course.course_name %></option>
      <% }) %>
    </select>
  </div>
  <div class="col-md-2">
    <label>Student Name</label>
    <select id="student" class="form-control">
      <option value="">All</option>
      <% students.forEach(student => { %>
        <option value="<%= student.id %>" <%= req.query.student == student.id ? 'selected' : '' %>><%= student.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="col-md-2">
    <label>Coupon Code</label>
    <select id="coupon_code" class="form-control">
      <option value="">All</option>
      <% coupons.forEach(coupon => { %>
        <option value="<%= coupon.coupon_code %>" <%= req.query.coupon_code == coupon.coupon_code ? 'selected' : '' %>><%= coupon.coupon_code %></option>
      <% }) %>
    </select>
  </div>
  </br>
  <div class="col-md-12 mt-2 text-center">
    <button id="filterBtn" class="btn btn-primary me-2">Filter</button>
    <a href="/admin/course-bookings" class="btn btn-secondary">Reset</a>
  </div>
</div>
            <div class="table-responsive">
              <table id="example3" class="display table-responsive-lg">
                <thead>
                  <tr>
                    <th>Sr.No #</th>
                    <th>Customer Name</th>
                    <th>Transaction Id</th>
                    <th>Course Name</th>
                    <th>Price</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% bookings.forEach((booking, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= booking.customer_name %></td>
                      <td><%= booking.transaction_id %></td>
                      <td><%= booking.course_name %></td>
                      <td><%= booking.total_amount.toFixed(2) %></td>
                      <!-- <td><%= new Date(booking.created_at).toLocaleDateString("en-GB") %></td> -->

                      <td>
  <%= booking.created_at
        ? new Date(booking.created_at).toLocaleString('en-GB', { 
            day: '2-digit', 
            month: '2-digit', 
            year: 'numeric', 
            hour: '2-digit', 
            minute: '2-digit', 
            hour12: true 
          }) 
        : '-' %>
</td>
                       <td>
  <%= 
    booking.payment_status === 'paid' || 
    booking.payment_status === 'completed' || 
    booking.payment_status === 'complete' 
      ? 'Paid' 
      : booking.payment_status 
  %>
</td>
                      <td>
                        <a href="/admin/booking-details/<%= booking.id %>" class="btn btn-primary shadow btn-xs sharp me-1">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>

<script>
  document.getElementById("filterBtn").addEventListener("click", () => {

  
    const params = new URLSearchParams();

    const from_date = document.getElementById("from_date").value;
    const to_date = document.getElementById("to_date").value;
    const payment_status = document.getElementById("payment_status").value;
    const course = document.getElementById("course").value;
    const student = document.getElementById("student").value;
    const coupon_code = document.getElementById("coupon_code").value;

    if (from_date) params.append("from_date", from_date);
    if (to_date) params.append("to_date", to_date);
    if (payment_status) params.append("payment_status", payment_status);
    if (course) params.append("course", course);
    if (student) params.append("student", student);
    if (coupon_code) params.append("coupon_code", coupon_code);

    window.location.href = "/admin/course-bookings?" + params.toString();
  });
</script>