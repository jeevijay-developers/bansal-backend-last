                    'webm', 'ogg'].includes(ext); %>

                    <div class="position-relative">
                      <% if (isVideo) { %>
                      <video width="100" controls>
                        <source
                          src="<%= publicUrl + file %>"
                          type="video/<%= ext %>"
                        />
                      </video>
                      <% } else { %>
                      <img src="<%= publicUrl + file %>" width="100" />
                      <% } %>
                      <button
                        type="button"
                        class="btn btn-sm btn-danger position-absolute top-0 end-0 remove-existing"
                        data-index="<%= index %>"
                      >
                        &times;
                      </button>
                      <input
                        type="hidden"
                        name="existing_gallery[]"
                        value="<%= file %>"
                      />
                    </div>

                    <% }); %>
                  </div>
                  <% } %>
