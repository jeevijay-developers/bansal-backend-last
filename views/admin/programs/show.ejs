<%- include('../layouts/header') %>

<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0"><%= page_name %></h4>
            <a href="<%= list_url %>" class="btn btn-primary btn-sm">
              <i class="fa fa-arrow-left"></i> Back
            </a>
          </div>
          <div class="card-body">
            <div class="row g-3">

              <div class="col-md-3">
                <label><strong>Training Title</strong></label>
                <p class="text-muted mb-1"><%= post.title %></p>
              </div>

              <div class="col-md-3">
                <label><strong>Training Code</strong></label>
                <p class="text-muted mb-1"><%= post.training_code %></p>
              </div>

              <div class="col-md-2">
                <label><strong>Apply Date</strong></label>
                <p class="text-muted mb-1"><%= new Date(post.apply_date).toDateString() %></p>
              </div>

              <div class="col-md-2">
                <label><strong>No. of Positions</strong></label>
                <p class="text-muted mb-1"><%= post.no_of_positions %></p>
              </div>

              <div class="col-md-2">
                <label><strong>Status</strong></label>
                <p class="text-muted mb-1"><%= post.status == 1 ? 'Active' : 'Inactive' %></p>
              </div>


              <div class="col-md-12">
                <label><strong>Description</strong></label>
                <div class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                  <%- post.description %>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

    <% if (requestList.length > 0) { %>
    <div class="col-12">
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0">Training Requests (<%= requestList.length %>) </h5>
        </div>
        <div class="card-body table-responsive">
          <table class="table table-bordered table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Message</th>
                <th>Requested On</th>
              </tr>
            </thead>
            <tbody>
              <% requestList.forEach((req, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= req.name || "N/A" %></td>
                <td><%= req.email || "N/A" %></td>
                <td><%= req.mobile || "N/A" %></td>
                <td><%= req.message || "N/A" %></td>
                <td><%= new Date(req.created_at).toDateString() %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="col-12">
      <div class="alert alert-info mt-3">No requests found for this training.</div>
    </div>
    <% } %>
  </div>
</div>

<%- include('../layouts/footer') %>
