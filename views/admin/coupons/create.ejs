<%- include('../layouts/header') %>

<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h4 class="card-title mb-0"><%= title %> <%= page_name %></h4>
          <button type="button" id="backButton" class="btn btn-primary btn-sm"> <i class="fa fa-arrow-left"></i> Back</button>
        </div>
        <div class="card-body">
          
          <form id="submitForm" class="forms-sample" action="<%= form_url %>" method="post" enctype="multipart/form-data">

            
            <div class="row">
              <!-- Coupon For -->
              <div class="col-md-4">
                <div class="form-group">
                  <label>Coupon for</label>
                  <select class="form-control" name="coupon_for" id="coupon_for">
                    <option value="">Select Coupon For</option>
                    <option value="course" <%= post.coupon_for === 'course' ? 'selected' : '' %>>Course</option>
                    <option value="test" <%= post.coupon_for === 'test' ? 'selected' : '' %>>Test</option>
                  </select>
                </div>
              </div>
          
              <!-- Coupon Visibility -->
              <div class="col-md-4">
                <div class="form-group">
                  <label>Coupon Visibility</label>
                  <select class="form-control" name="visibility" id="visibility">
                    <option value="">Select Visibility</option>
                    <option value="public" <%= post.visibility === 'public' ? 'selected' : '' %>>Public</option>
                    <option value="private" <%= post.visibility === 'private' ? 'selected' : '' %>>Private</option>
                  </select>
                </div>
              </div>
           
            
            
              <!-- Coupon Name -->
              <div class="col-md-4">
                <div class="form-group">
                  <label for="coupon_name">Coupon Name</label>
                  <input type="text" class="form-control" id="coupon_name" name="coupon_name" value="<%= post.coupon_name || '' %>">
                </div>
              </div>
          
              <!-- Coupon Code -->
              <div class="col-md-4">
                <div class="form-group">
                  <label for="coupon_code">Coupon Code</label>
                  <input type="text" class="form-control" id="coupon_code" name="coupon_code" value="<%= post.coupon_code || '' %>">
                </div>
              </div>

             
          
              <!-- Begin Date -->
              <div class="col-md-4">
                <div class="form-group">
                  <label>Begin Date</label>
                  <input type="date" class="form-control" name="begin_date" id="begin_date" value="<%= post.begin_date || '' %>">
                </div>
              </div>
          
              <!-- End Date -->
              <div class="col-md-4">
                <div class="form-group">
                  <label>Last Date</label>
                  <input type="date" class="form-control" name="end_date" id="end_date" value="<%= post.end_date || '' %>">
                </div>
              </div>
          
              <!-- Coupon Type -->
              <div class="col-md-4">
                <div class="form-group">
                  <label>Coupon Type</label>
                  <select class="form-control" name="coupon_type" id="coupon_type">
                    <option value="">Select Coupon Type</option>
                    <option value="percentage" <%= post.coupon_type === 'percentage' ? 'selected' : '' %>>Percentage</option>
                    <option value="price" <%= post.coupon_type === 'price' ? 'selected' : '' %>>Price</option>
                  </select>
                </div>
              </div>
        
              <!-- Discount -->
              <div class="col-md-4">
                <div class="form-group">
                  <label>Discount</label>
                  <input type="number" class="form-control" name="coupon_discount" id="coupon_discount" value="<%= post.coupon_discount || '' %>">
                </div>
              </div>
          
              <!-- Min Cart Value -->
              <div class="col-md-4">
                <div class="form-group">
                  <label for="cart_value">Min Cart Value</label>
                  <input type="text" class="form-control" id="cart_value" name="cart_value" value="<%= post.cart_value || '' %>">
                </div>
              </div>
           
              <!-- Coupon Uses -->
              <div class="col-md-4">
                <div class="form-group">
                  <label for="coupon_uses">Coupon Uses</label>
                  <input type="text" class="form-control" id="coupon_uses" name="coupon_uses" value="<%= post.coupon_uses || '' %>">
                </div>
              </div>
               <!-- Coupon Image -->
               <div class="col-md-4">
                <div class="form-group">
                  <label class="form-label">Coupon Image *</label>
                  <input type="file" class="form-control" name="coupon_image" onchange="readURL(this, 'image_view');" id="image"/>
                  <!-- Use the course image or fallback to the default image -->
                  <img id="image_view" src="<%= publicUrl + image %>" width="200px">
              
                </div>
              </div>
              <!-- Coupon Description -->
              <div class="col-md-12">
                <div class="form-group">
                  <label for="coupon_description">Coupon Description</label>
                  <textarea class="form-control ckeditor" id="coupon_description" name="coupon_description"><%= post.coupon_description || '' %></textarea>
                </div>
              </div>
        
              <div class="col-md-4">
                <div class="form-group">
                  <label class="form-label">Status</label>
                  <select class="form-control" name="status" id="status">
                    <option value="1" <%= post.status == 1 ? 'selected' : '' %>>Active</option>
                    <option value="0" <%= post.status == 0 ? 'selected' : '' %>>Inactive</option>
                  </select>
                </div>
              </div>
            </div>
          
            <!-- Hidden Fields -->
            <input type="hidden" name="id" value="<%= post.id %>">
          
            <!-- Submit Button -->
            <div class="col-md-12 mt-3">
              <button type="submit" id="submitButton" class="btn btn-primary float-right"
                      data-loading-text="<i class='fa fa-spinner fa-spin'></i> Sending..."
                      data-rest-text="Update">Update</button>
            </div>
          </form>
          
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<%- include('../layouts/footer') %>

