<%- include('../layouts/header') %>
<style>
    .tab{
  list-style:none;
}
.tab li{
  display:inline-block;
  margin-right:20px;
  background: #DDDD;
  padding: 10px;
}
.tab li a{
  text-decoration: none;
}
.tab li.active a{
  color:red;
}

ul{
  list-style: none;
}

.tab-content li{
  display: none;
}

.tab-content li.active{
  display: block
}

</style>
<section class="content-body">
  <div class="container-fluid">
    
    <div class="row">
      <div class="col-12">
        <div class="card">
             <div class="card-header d-flex justify-content-between align-items-center">
              <ul class="tab mb-0 p-0">
          <li>
            <a href="/admin/student-show/<%= customerId %>" class="tab-link">Student Details</a>
          </li>
          <li>
            <a href="/admin/student-course-booking/<%= customerId %>" class="tab-link">Course Booking</a>
          </li>
          <li>
            <a href="/admin/student-test-series-booking/<%= customerId %>" class="tab-link">Test Series Booking</a>
          </li>
        </ul>
        
<script>
  // Get current URL
  const currentUrl = window.location.pathname;

  // Get all tab links
  const links = document.querySelectorAll('.tab-link');

  links.forEach(link => {
    if (currentUrl.includes(link.getAttribute('href'))) {
      link.parentElement.classList.add('active');
    }
  });
</script>
              <a href="/admin/student-list" class="btn btn-primary btn-sm">
                <i class="fa fa-arrow-left"></i> Back
              </a>
            </div>

         
    <div class="card-body">

            <div class="table-responsive">
              <table id="example3" class="display table-responsive-lg">
                <thead>
                  <tr>
                    <th>Sr.No #</th>
                   
                    <th>Transaction Id</th>
                    
                    <th>Course Name</th>
                    <th>Price</th>
                    <th>Order Date</th>
                    <th>Order By</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% bookings.forEach((booking, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      
                      <td><%= booking.transaction_id %></td>
                      <td><%= booking.course_name %></td>
                      <td><%= booking.total_amount.toFixed(2) %></td>
                      <!-- <td><%= new Date(booking.created_at).toLocaleDateString("en-GB") %></td> -->

                       <td>
  <%= booking.created_at
        ? new Date(booking.created_at).toLocaleString('en-GB', { 
            day: '2-digit', 
            month: '2-digit', 
            year: 'numeric', 
            hour: '2-digit', 
            minute: '2-digit', 
            hour12: true 
          }) 
        : '-' %>
</td>
                                         
                      <td><%= booking.assign_by %></td>
                      <td><%= booking.payment_status %></td>
                      <td>
                        <a href="/admin/booking-details/<%= booking.id %>" class="btn btn-primary shadow btn-xs sharp me-1">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>


<script>
   
tabs(".tab",".contents");

function tabs(menuName, contentName) {
    $(menuName).find('li').each(function() {
        $(this).click(function() {
            $(menuName).find('li').removeClass('active')
            $(contentName).children().removeClass('active')
            var clicked = $(this).find('a').attr('href')
            $(this).addClass('active')
            $(contentName).find(clicked).addClass('active')
        });
    });
}

</script>