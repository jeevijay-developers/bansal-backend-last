<style>
    .tab{
  list-style:none;
}
.tab li{
  display:inline-block;
  margin-right:20px;
  background: #DDDD;
  padding: 10px;
}
.tab li a{
  text-decoration: none;
}
.tab li.active a{
  color:red;
}

ul{
  list-style: none;
}

.tab-content li{
  display: none;
}

.tab-content li.active{
  display: block
}

</style>
