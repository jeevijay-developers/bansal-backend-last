<script>
  // Get current URL
  const currentUrl = window.location.pathname;

  // Get all tab links
  const links = document.querySelectorAll('.tab-link');

  links.forEach(link => {
    if (currentUrl.includes(link.getAttribute('href'))) {
      link.parentElement.classList.add('active');
    }
  });
</script>
