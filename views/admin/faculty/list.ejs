      <script>
        $(document).ready(function () {
          // Initialize DataTable with pagination
          var table = $('#facultyTable').DataTable({
            "pageLength": 15,
            "lengthMenu": [[15, 25, 50, 100, -1], [15, 25, 50, 100, "All"]],
            "order": [[1, "asc"]], // Sort by Sr.No column
            "columnDefs": [
              { "orderable": false, "targets": 0 }, // Disable sorting on checkbox column
              { "orderable": false, "targets": 9 }  // Disable sorting on actions column
            ],
            "language": {
              "search": "Search:",
              "lengthMenu": "Show _MENU_ entries",
              "info": "Showing _START_ to _END_ of _TOTAL_ entries",
              "infoEmpty": "Showing 0 to 0 of 0 entries",
              "infoFiltered": "(filtered from _MAX_ total entries)",
              "paginate": {
                "first": "First",
                "last": "Last",
                "next": "Next",
                "previous": "Previous"
              }
            },
            "drawCallback": function() {
              // Re-attach event listeners after table redraw
              updateBulkDeleteButton();
              updateBulkRestoreButton();
            }
          });

          // Update Sr.No after filtering/sorting
          table.on('order.dt search.dt', function () {
            let i = 1;
            table.cells(null, 1, { search: 'applied', order: 'applied' }).every(function () {
              this.data(i++);
            });
          }).draw();
        });
      </script>

      
        <script>
  const bulkDeleteBtn = document.getElementById("bulkDeleteBtn");
  const bulkRestoreBtn = document.getElementById("bulkRestoreBtn");
  const selectAll = document.getElementById("selectAll");

  function updateBulkDeleteButton() {
    if (!bulkDeleteBtn) return;
    const checkboxes = document.querySelectorAll(".bulk-checkbox");
    const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
    bulkDeleteBtn.disabled = !anyChecked;
  }

  function updateBulkRestoreButton() {
    if (!bulkRestoreBtn) return;
    const checkboxes = document.querySelectorAll(".bulk-checkbox");
    const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
    bulkRestoreBtn.disabled = !anyChecked;
  }

  // On individual checkbox change
  $(document).on('change', '.bulk-checkbox', function() {
    updateBulkDeleteButton();
    updateBulkRestoreButton();
  });

  // On select/deselect all
  $(document).on('change', '#selectAll', function() {
    const isChecked = this.checked;
    $('.bulk-checkbox:visible').prop('checked', isChecked);
    updateBulkDeleteButton();
    updateBulkRestoreButton();
  });

  // Bulk Delete click
  if (bulkDeleteBtn) {
    bulkDeleteBtn.addEventListener("click", async function() {
      const checkboxes = document.querySelectorAll(".bulk-checkbox");
      const selectedIds = Array.from(checkboxes)
                               .filter(cb => cb.checked)
                               .map(cb => cb.value);

      if (selectedIds.length === 0) return;

      if (!confirm("Are you sure you want to delete selected faculty?")) return;

      try {
        const response = await fetch("/admin/faculty/bulk-delete", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ ids: selectedIds })
        });

        const result = await response.json();
        alert(result.message);

        if (result.success) location.reload();
      } catch (err) {
        alert("Error deleting faculty: " + err.message);
      }
    });
  }

  // Bulk Restore click
  if (bulkRestoreBtn) {
    bulkRestoreBtn.addEventListener("click", async function() {
      const checkboxes = document.querySelectorAll(".bulk-checkbox");
      const selectedIds = Array.from(checkboxes)
                               .filter(cb => cb.checked)
                               .map(cb => cb.value);

      if (selectedIds.length === 0) return;

      if (!confirm("Are you sure you want to restore selected faculty?")) return;

      try {
        const response = await fetch("/admin/faculty/bulk-restore", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ ids: selectedIds })
        });

        const result = await response.json();
        alert(result.message);

        if (result.success) location.reload();
      } catch (err) {
        alert("Error restoring faculty: " + err.message);
      }
    });
  }
</script>

<script>
document.getElementById('exportBtn').addEventListener('click', async function(e) {
  e.preventDefault();
  try {
    const response = await fetch('/admin/faculty/export', { method: 'POST' });
    if (!response.ok) throw new Error('Failed to export');
    
    const blob = await response.blob();
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');

    // Generate filename with current local date-time
    const now = new Date();
    const pad = (n) => n.toString().padStart(2, '0');
    const timestamp = `${now.getFullYear()}-${pad(now.getMonth()+1)}-${pad(now.getDate())}_${pad(now.getHours())}-${pad(now.getMinutes())}-${pad(now.getSeconds())}`;

    a.href = url;
    a.download = `faculty_export_${timestamp}.csv`; // dynamic filename
    document.body.appendChild(a);
    a.click();
    a.remove();
    window.URL.revokeObjectURL(url); // clean up
  } catch (err) {
    alert(err.message);
  }
});
</script>