<style>
  /* Overall layout styling */
  .page-header {
    background-color: #024DAE;
    color: white;
    padding: 10px;
    border-radius: 0.5rem;
margin-bottom: 15px;;
  }

  /* Nav tab styles */
  .nav-tabs {
    border: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .nav-tabs .nav-item {
    margin: 0;
  }

  .nav-tabs .nav-link {
    background-color: white;
    color: #024DAE;
    padding: 0.75rem 1.2rem;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
    border: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-width: 140px;
  }

  .nav-tabs .nav-link .badge {
    margin-left: 0.5rem;
    background-color: #333;
    color: white;
    font-size: 0.75rem;
    border-radius: 10px;
    padding: 0.2rem 0.5rem;
  }

  .nav-tabs .nav-link.active,
  .nav-tabs .nav-link:hover {
    background-color: #0DB3D6;
    color: white;
    box-shadow: 0 4px 12px rgba(13, 179, 214, 0.2);
  }

  @media (max-width: 768px) {
    .nav-tabs {
      flex-direction: column;
    }

    .nav-tabs .nav-link {
      width: 100%;
    }
  }
</style>

<div class="col-lg-12">
  <div class="page-header">
    <ul class="nav nav-tabs" id="course-tabs">
      <li class="nav-item">
        <a class="nav-link" href="/admin/course-show/<%= course.id %>">
          Overview
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/course-subject-list/<%= course.id %>">
          Subject <span class="badge"><%= subjectCount %></span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/course-chapter-list/<%= course.id %>">
          Chapters <span class="badge"><%= chapterCount %></span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/course-pdf-list/<%= course.id %>">
          PDF <span class="badge"><%= pdfCount %></span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/course-video-list/<%= course.id %>">
          Videos <span class="badge"><%= videoCount %></span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/course-booking-list/<%= course.id %>">
          Students <span class="badge"><%= bookingCount %></span>
        </a>
      </li>
       <li class="nav-item">
        <a class="nav-link" href="/admin/course-exam-list/<%= course.id %>">
          Practice Exam <span class="badge"><%= testCount %></span>
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/admin/live-class-list/<%= course.id %>">
          Live Class <span class="badge"><%= liveClassCount %></span>
        </a>
      </li>
    </ul>
  </div>
</div>

<script>
  // Auto-detect and highlight the active tab based on current URL
  const tabs = document.querySelectorAll("#course-tabs .nav-link");
  const currentPath = window.location.pathname;

  tabs.forEach(link => {
    if (currentPath === link.getAttribute("href")) {
      link.classList.add("active");
    }
  });
</script>
