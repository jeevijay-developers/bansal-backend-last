<%- include('../layouts/header') %>

<section class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex align-items-center justify-content-between">
            <h4 class="card-title mb-0"><%= title %></h4>
            <div class="row">
              <div class="col-12 text-end">

                <button type="button" id="backButton" class="btn btn-primary btn-sm">
                  <i class="fa fa-arrow-left"></i>
                </button>
              
              </div>
            
            </div>
          
          </div>

          <div class="card-body">
           <div class="row align-items-end g-2 mb-3 filter-tab">
  <div class="col-md-2">
    <label>From</label>
    <input type="date" id="from_date" class="form-control" value="<%= req.query.from_date || '' %>">
  </div>
  <div class="col-md-2">
    <label>To</label>
    <input type="date" id="to_date" class="form-control" value="<%= req.query.to_date || '' %>">
  </div>
 
  </br>

  <div class="col-md-2  text-center">
    <button id="filterBtn" class="btn btn-primary me-2">Filter</button>
    <a href="<%= contact_enquiries_list %>" class="btn btn-secondary">Reset</a>
  </div>
</div>
            <div class="table-responsive">
              <table id="example3" class="display table-responsive-lg">
                <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
        <th>Stream</th>
     <th>Class</th>
     <th>Message</th>
     <th>Enquiry For</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% if (request_data && request_data.length > 0) { %>
      <% request_data.forEach((r) => { %>
        <tr>
          <td><%= r.id %></td>
          <td><%= r.name %></td>
          <td><%= r.email %></td>
          <td><%= r.mobile %></td>
           <td><%= r.category_name %></td>
            <td><%= r.class_name %></td>
        
            <td><%= r.message %></td>
             <td><%= r.enquiry_for %></td>
         
        
          <td><%= r.created_at ? new Date(r.created_at).toLocaleString('en-GB', { day: '2-digit' ,
                              month: '2-digit' , year: 'numeric' , hour: '2-digit' , minute: '2-digit' , hour12: true })
                              : '-' %></td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="8" style="text-align: center;">No records found.</td>
      </tr>
    <% } %>
  </tbody>
</table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>

<script>
// Custom date sorting for dd/mm/yyyy hh:mm AM/PM format
jQuery.extend(jQuery.fn.dataTableExt.oSort, {
  "date-uk-pre": function (a) {
    if (a == null || a === "" || a === "-") {
      return 0;
    }
    // Extract date part from "dd/mm/yyyy, hh:mm AM/PM" format
    var ukDatea = a.split(',')[0].trim().split('/');
    return (ukDatea[2] + ukDatea[1] + ukDatea[0]) * 1;
  },
  "date-uk-asc": function (a, b) {
    return ((a < b) ? -1 : ((a > b) ? 1 : 0));
  },
  "date-uk-desc": function (a, b) {
    return ((a < b) ? 1 : ((a > b) ? -1 : 0));
  }
});

// Initialize DataTable with custom date column - destroy existing instance first
$(document).ready(function() {
  // Check if DataTable already exists and destroy it
  if ($.fn.DataTable.isDataTable('#example3')) {
    $('#example3').DataTable().destroy();
  }
  
  // Initialize with custom configuration
  $('#example3').DataTable({
    "columnDefs": [
      { "type": "date-uk", "targets": 8 } // Date column is the 9th column (index 8)
    ]
  });
});

document.getElementById("filterBtn").addEventListener("click", () => {
  const params = new URLSearchParams();

  const from_date = document.getElementById("from_date").value;
  const to_date = document.getElementById("to_date").value;


  if (from_date) params.append("from_date", from_date);
  if (to_date) params.append("to_date", to_date);


  window.location.href = "<%= contact_enquiries_list %>?" + params.toString();
});
</script>
